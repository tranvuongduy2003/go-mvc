# Application Configuration
APP_NAME=go-mvc
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_DEBUG=true

# Server Configuration
SERVER_HTTP_HOST=0.0.0.0
SERVER_HTTP_PORT=8080

# Database Configuration - Primary
DB_PRIMARY_HOST=localhost
DB_PRIMARY_PORT=5432
DB_PRIMARY_USERNAME=postgres
DB_PRIMARY_PASSWORD=postgres
DB_PRIMARY_NAME=enterprise_app_dev
DB_PRIMARY_SSL_MODE=disable

# Database Configuration - Replica (Optional)
DB_REPLICA_HOST=
DB_REPLICA_PORT=5432
DB_REPLICA_USERNAME=
DB_REPLICA_PASSWORD=
DB_REPLICA_NAME=
DB_REPLICA_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Logging Configuration
LOGGER_LEVEL=debug
LOGGER_ENCODING=console

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing Configuration
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# NATS Configuration
NATS_URL=nats://localhost:4222

# External Services
PAYMENT_SERVICE_URL=https://api.stripe.com
PAYMENT_SERVICE_API_KEY=sk_test_your_stripe_key
SENDGRID_API_KEY=SG.your_sendgrid_key
EMAIL_FROM_ADDRESS=noreply@yourapp.com

# Feature Flags
FEATURE_ENABLE_SWAGGER=true
FEATURE_ENABLE_PPROF=true
FEATURE_ENABLE_HEALTH_CHECK=true
FEATURE_ENABLE_METRICS=true